<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_v_view"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/text_view_v_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/image_v_view"
            android:gravity="right"
            android:paddingRight="8dp"
            android:text="الغرض"
            android:textColor="#0000ff"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_v_pound"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_view_v_price"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/text_view_v_price"
            android:gravity="right"
            android:paddingRight="8dp"
            android:text="ليرة"
            android:textColor="@android:color/black"
            android:textDirection="rtl"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/text_view_v_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_v_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/image_v_view"
            android:gravity="right"
            android:paddingRight="8dp"
            android:text="السعر"
            android:textColor="#008800"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/text_view_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_v_price"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/image_v_view"
            android:gravity="right"
            android:hint="الوصف"
            android:paddingRight="8dp"
            android:textColor="#888888"
            android:textDirection="rtl"
            android:textSize="16sp"

            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>